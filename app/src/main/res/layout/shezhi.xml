<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/r"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/leftbackicon_white_titlebar_pressed"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="设置"
            android:textColor="@color/title"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_alignParentBottom="true"
            android:background="@color/my_lines"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/r">

        <ImageView
            android:layout_marginRight="10dp"
            android:layout_width="10dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/name_arrow"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/liulan"
            android:text="当前版本(2.1.2)"
            android:textSize="18sp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/t6"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@id/r1"
        android:background="@color/my_lines"/>

    <RelativeLayout
        android:id="@+id/r2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/t6">

        <ImageView
            android:layout_marginRight="10dp"
            android:layout_width="10dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/name_arrow"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/liulan"
            android:text="清除缓存"
            android:textSize="18sp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/t7"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@id/r2"
        android:background="@color/my_lines"/>

    <RelativeLayout
        android:id="@+id/r3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/t7">

        <ImageView
            android:layout_marginRight="10dp"
            android:layout_width="10dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/name_arrow"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/liulan"
            android:text="退出登录"
            android:textSize="18sp"/>

    </RelativeLayout>


</RelativeLayout>
